<div>
  <div>
    <h1>
      Like #<%= @the_like.id %> details
    </h1>

    <div>
      <div>
        <a href="/likes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_like/<%= @the_like.id %>">
          Delete like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Post
      </dt>
      <dd>
        <%= @the_like.post_id %>
      </dd>

      <dt>
        Liked
      </dt>
      <dd>
        <%= @the_like.liked_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit like
    </h2>

    <form action="/modify_like/<%= @the_like.id %>"  method="post" class="mb-3">
      <div class="mb-3">
        <label for="post_id_box" class="form-label">
          Post
        </label>

        <input type="text" id="post_id_box" name="query_post_id" value="<%= @the_like.post_id %>" class="form-control">
      </div>

      <div class="mb-3">
        <label for="liked_id_box" class="form-label">
          Liked
        </label>

        <input type="text" id="liked_id_box" name="query_liked_id" value="<%= @the_like.liked_id %>" class="form-control">
      </div>

      <button class="btn btn-primary">
        Update like
      </button>
    </form>
  </div>
</div>

<hr>
