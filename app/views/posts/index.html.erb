<div>
  <div>
    <h1>Feed</h1>
    <div class="tabs">
      <%= link_to 'Following', posts_path, class: (params[:tab] == 'explore' ? '' : 'active') %> |
      <%= link_to 'Explore', posts_path(tab: 'explore'), class: (params[:tab] == 'explore' ? 'active' : '') %>
    </div>
  </div>
</div>

<%= form_with url: insert_post_path, scope: :post, local: true, html: {class: "mb-3"} do |f| %>
  <%= f.hidden_field :creator_id, value: current_user.id %>

  <div class="mb-3">
    <%= f.text_area :content,
          rows: 3,
          placeholder: "What's happening?",
          class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.collection_select :book_id,
          Book.all, :id, :title,
          prompt: "— no book —",
          class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :media, "Attach images/videos (optional)" %><br>
    <%= f.file_field :media, multiple: true, direct_upload: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>

<hr>

<div class="posts-feed">
  <% @list_of_posts.each do |post| %>
    <div class="post-card">
      <div class="post-header">
        <%= image_tag(post.creator.avatar || 'default_avatar.png', alt: post.creator.name, class: 'avatar') %>
        <div class="post-user-info">
          <strong><%= post.creator.name %></strong>
        </div>
      </div>
      <span class="post-body">
        <p><%= post.content %></p>
        <% if post.book %>
          <p class="post-book">
            Reading: <%= link_to post.book.title, book_path(post.book) %>
          </p>
        <% end %>
      </span>
      <div class="post-footer">
        <span><%= pluralize(post.likes_count, 'Like') %></span>
        <span><%= pluralize(post.comments_count, 'Comment') %></span>
        <span><%= time_ago_in_words(post.created_at) %> ago</span>
      </div>
    </div>
    <hr>
  <% end %>
</div>
