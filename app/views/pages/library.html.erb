<div class="row row-cols-2 row-cols-sm-3 row-cols-md-5 g-3">
  <% @readings.each do |reading| %>
    <% book = reading.book %>
    <div class="col text-center">
      <%= image_tag(book.image_url, class: 'img-fluid mb-2') if book.image_url.present? %>
      <div><strong><%= book.title %></strong></div>
      <div class="text-muted"><%= book.author.name if book.author %></div>
      <%= form_with url: update_reading_path(reading), method: :post, local: true do |f| %>
        <div class="mb-1">
          <%= f.select :status, Reading::STATUSES, { selected: reading.status }, class: 'form-select form-select-sm' %>
        </div>
        <div class="mb-1">
          <%= f.number_field :rating, value: reading.rating, in: 1..5, class: 'form-control form-control-sm', placeholder: 'Rating' %>
        </div>
        <%= f.submit 'Save', class: 'btn btn-sm btn-secondary' %>
      <% end %>
    </div>
  <% end %>
</div>
