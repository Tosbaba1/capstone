<div>
  <div>
    <h1>
      List of all likes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new like
    </h2>

    <form action="/insert_like" method="post" class="mb-3">
      <div class="mb-3">
        <label for="post_id_box" class="form-label">
          Post
        </label>

        <input type="text" id="post_id_box" name="query_post_id" class="form-control">
      </div>

      <div class="mb-3">
        <label for="liked_id_box" class="form-label">
          Liked
        </label>

        <input type="text" id="liked_id_box" name="query_liked_id" class="form-control">
      </div>

      <button class="btn btn-primary">
        Create like
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table table-striped">
      <tr>
        <th>
          ID
        </th>

        <th>
          Post
        </th>

        <th>
          Liked
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_likes.each do |a_like| %>
      <tr>
        <td>
          <%= a_like.id %>
        </td>

        <td>
          <%= a_like.post_id %>
        </td>

        <td>
          <%= a_like.liked_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_like.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_like.updated_at) %> ago
        </td>

        <td>
          <a href="/likes/<%= a_like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
