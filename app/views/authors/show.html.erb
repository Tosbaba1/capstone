<div>
  <div class="d-flex justify-content-between mb-3">
    <%= link_to authors_path, class: 'text-white' do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
  </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_author.name %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_author.bio %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_author.dob %>
      </dd>

      <dt>
        Books count
      </dt>
      <dd>
        <%= @the_author.books_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_author.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_author.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

