<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="mb-3">
    <%= f.label :email, class: "text-white" %>
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="mb-3" data-controller="password-visibility">
    <%= f.label :password, class: "text-white" %>
    <div class="input-group">
      <%= f.password_field :password, class: "form-control", data: { password_visibility_target: "input" }, autocomplete: "current-password" %>
      <span class="input-group-text" data-action="click->password-visibility#toggle">
        <i class="bi bi-eye" data-password-visibility-target="toggle"></i>
      </span>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label text-white" %>
    </div>
  <% end -%>

  <%= f.submit "Log in", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
